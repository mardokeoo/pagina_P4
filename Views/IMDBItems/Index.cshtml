@model IEnumerable<PAM.Models.IMDBItem>

@{
    ViewData["Title"] = "IMDBItems";
}

<h1>IMDBItems</h1>

<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            @*</th>
            <th>
                Image
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IMDBRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MetacriticRating)
            </th>
            <th>
                Details
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            @*<td>
                <img src=@item.ImageLink style="max-width:100px; max-height:100px" class="rounded" />
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IMDBRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetacriticRating)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.IMDBItemID">Edit</a> |*@
                <a asp-action="Details" asp-route-id="@item.IMDBItemID">Details</a>
                @*<a asp-action="Delete" asp-route-id="@item.IMDBItemID">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>

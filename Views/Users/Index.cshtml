@model IEnumerable<PAM.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table text-white">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GoogleUserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GoogleUserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @{ 
                    if(item.Photo != null)
                    {
                        var base64 = Convert.ToBase64String(item.Photo);
                        var imagsrc = string.Format("data:image/jpg;base64,{0}", base64);
                        <img src=@imagsrc style="max-width:100px; max-height:100px" class="rounded"/>
                    }
                }
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.UserID">Details</a> |
            </td>
        </tr>
}
    </tbody>
</table>
